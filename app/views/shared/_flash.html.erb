<% if flash[:notice] %>	
	<div class="w-1/3 text-center rounded-lg mx-auto bg-green-200 text-green-900 px-4 py-2 my-2" role="alert">
		<%= flash[:notice] %>
	</div>
<% end %>

<% if flash[:alert] %>
	<div class="w-1/3 text-center rounded-lg mx-auto bg-red-200 text-red-900 px-4 py-2 my-2" role="alert">
		<%=	flash[:alert] %>
	</div>
<% end %>